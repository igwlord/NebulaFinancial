{
  "name": "nebula-financial",
  "version": "2.0.0",
  "description": "Tu Universo Financiero Personal - Aplicación web moderna para gestión financiera",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=8080 --open=/index.html",
    "start:lab": "live-server --port=8080 --open=/index-lab.html",
    "dev": "live-server --port=3000 --open=/index.html --watch=css,js",
    "build:css": "tailwindcss -i css/tailwind-input.css -o css/tailwind-output.css --minify",
    "build": "npm run build:css && npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/styles.min.css css/*.css",
    "minify-js": "terser js/*.js -o dist/app.min.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint js/**/*.js",
    "format": "prettier --write .",
    "deploy": "firebase deploy",
    "start:inspect": "node --inspect ./index.js",
    "start:inspect-brk": "node --inspect-brk ./index.js"
  },
  "keywords": [
    "finanzas",
    "personal",
    "finance",
    "money",
    "budget",
    "investment",
    "tracking",
    "firebase",
    "pwa"
  ],
  "author": "Tu Nombre <tu@email.com> (https://github.com/tu-usuario)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tu-usuario/nebula-financial.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/nebula-financial/issues"
  },
  "homepage": "https://nebula-financial.web.app",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "clean-css-cli": "^5.6.1",
    "eslint": "^8.45.0",
    "live-server": "^1.2.2",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "tailwindcss": "^4.1.10",
    "terser": "^5.19.2"
  },
  "dependencies": {
    "firebase": "^10.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "pwa": {
    "name": "Nebula Financial",
    "short_name": "Nebula",
    "description": "Tu Universo Financiero Personal",
    "theme_color": "#FFD700",
    "background_color": "#000000",
    "display": "standalone",
    "orientation": "portrait"
  }
}
